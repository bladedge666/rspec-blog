<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h1>Blog Posts</h1>
      <hr>
      <% @posts.each do |post| %>
      <h2><%= post.title %> by <%= post.author %></h2>
      <p>
        <%= post.content %>
      </p>
      <ul class="post-links">
        <li><%= link_to "Details", post, class: "btn btn-sm btn-primary" %></li>
        <li><%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-info" %></li>
        <li><%= link_to "Delete", post, method: :delete, class: "btn btn-sm btn-danger" %></li>
      </ul>
      <hr>
      <% end %>
    </div>
  </div>
</div>