<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h1>New post</h1>
      <hr>

      <%= simple_form_for @post do |f| %>
      <%= f.input :title %>
      <%= f.input :author %>
      <%= f.input :content %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>